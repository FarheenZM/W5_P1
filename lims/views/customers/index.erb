<h1>Customers list</h1>
<table>
  <tr>
    <th>Name</th>
    <th>Postal code</th>
    <th>Actions</th>
  </tr>
  <% for customer in @customers%>
  <tr>
  <td><%= customer.name %></td>
  <td><%= customer.postal_code %></td>
  <td>
    <a href="/customers/edit_customer/<%= customer.id%>">Edit</a>
    <a href="/customers/delete_customer/<%= customer.id%>">Delete Customer</a>
  </td>
  </tr>
  <% end %>
</table>
<br>
<a href="/customers/add_customer">Add new customer here</a>
